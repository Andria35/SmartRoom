<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="12dp"
    tools:context=".PublisherActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publisher: Room Sensor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtConnectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtLightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light sensor (lux):"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtLightValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtAccelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer (x, y, z):"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtAccelValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtSoundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound level (mic):"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtSoundValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:id="@+id/btnStartPublishing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start publishing"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnStopPublishing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop publishing" />
    </LinearLayout>

</LinearLayout>